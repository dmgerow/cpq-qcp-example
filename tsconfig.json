{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "watch": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
